<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mijnlieff.bord.BordViewCompanion">
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#cancel" text="Verlaat Spel" />
        </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <left>
      <VBox BorderPane.alignment="CENTER_LEFT">
         <children>
            <StackPane alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label fx:id="naamWit" text="Label" textFill="WHITE">
                     <font>
                        <Font name="System Italic" size="60.0" />
                     </font></Label>
               </children>
            </StackPane>
            <AnchorPane fx:id="pionnenWit" prefHeight="200.0" prefWidth="200.0" />
            <StackPane alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label fx:id="puntenWit" text="0" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="40.0" />
                     </font></Label>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <StackPane alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label fx:id="naamZwart" text="Label" textFill="WHITE">
                     <font>
                        <Font name="System Italic" size="60.0" />
                     </font></Label>
               </children>
            </StackPane>
            <AnchorPane fx:id="pionnenZwart" prefHeight="200.0" prefWidth="200.0" />
            <StackPane alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label fx:id="puntenZwart" text="0" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="40.0" />
                     </font></Label>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
